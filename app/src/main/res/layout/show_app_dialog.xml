<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/car"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/title_icon"
            android:text="@string/order_message"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/start_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发地："
            android:maxLines="3"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/start_add_dia_appoint"
            android:layout_toRightOf="@+id/start_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/start_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发时间："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/start_time_dia_appoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/start_tim"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车型："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/car_state_appoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/car"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座位："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/people_num_appoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/people"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/color_ff"
            android:textSize="15sp"
            android:background="@drawable/login_button_down"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/appoint_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textColor="@color/color_ff"
            android:text="抢单"
            android:textSize="15sp"
            android:background="@drawable/login_button_down"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>